{
    "extends": [
        "next/core-web-vitals",
        "plugin:mdx/recommended",
        "prettier"
    ],
    "plugins": [
        "prettier"
    ],
    "rules": {
        // Additional, per-project rules...
        "no-unused-vars": "error",
        "mdx/no-unused-expressions": "off",
        "react/jsx-no-undefined": "off"
    },
    "overrides": [
        {
            "files": [
                "*.mdx"
            ],
            "extends": "plugin:mdx/overrides"
        }
    ],
    "ignorePatterns": [
        "node_modules/",
        ".next/",
        "out/",
        "public/"
    ]
}